{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++11",
        "src/*.cpp",
        "-o",
        "${workspaceFolder}/build/${workspaceFolderBasename}.out"
      ],
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
    },
  ]
}